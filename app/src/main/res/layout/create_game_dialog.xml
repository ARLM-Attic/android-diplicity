<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8"
        android:useDefaultMargins="true">

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_columnWeight="0"
            android:id="@+id/variant_label"
            android:text="@string/variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            app:layout_columnWeight="1"
            android:id="@+id/variants"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_columnWeight="0"
            android:id="@+id/phase_length_label"
            android:text="@string/phase_length_in_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_columnWeight="1"
            android:inputType="number"
            android:id="@+id/phase_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            app:layout_columnWeight="0"
            android:id="@+id/min_rating_label"
            android:text="@string/min_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_columnWeight="1"
            android:inputType="numberDecimal"
            android:id="@+id/min_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_columnWeight="0"
            android:id="@+id/max_rating_label"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/max_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_columnWeight="1"
            android:inputType="numberDecimal"
            android:id="@+id/max_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_columnWeight="0"
            android:id="@+id/min_reliability_label"
            android:text="@string/min_reliability"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            app:layout_columnWeight="1"
            android:id="@+id/min_reliability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_columnWeight="0"
            android:id="@+id/min_quickness_label"
            android:text="@string/min_quickness"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            app:layout_columnWeight="1"
            android:id="@+id/min_quickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_columnWeight="0"
            android:id="@+id/max_hated_label"
            android:text="@string/max_hated"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            app:layout_columnWeight="1"
            android:id="@+id/max_hated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_columnWeight="0"
            android:id="@+id/max_hater_label"
            android:text="@string/max_hater"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />

        <EditText
            app:layout_columnWeight="1"
            android:inputType="numberDecimal"
            android:id="@+id/max_hater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </GridLayout>
</RelativeLayout>